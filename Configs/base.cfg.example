#BY OUTSIDER




# Only change the IP if you're using a server with multiple network interfaces, otherwise change the port only.
endpoint_add_tcp "0.0.0.0:30120"
endpoint_add_udp "0.0.0.0:30120"

set mysql_connection_string "mysql://root:@localhost/vorp-pack?connectTimeout=600000" # your DATABASE PATH

###################### EXCUTE FILES HERE ###################
##########################################################################################
exec Configs/Resources.cfg  # These resources will start by default add them in the file.

exec Configs/perms.cfg  # add your permissions in there

exec @spooner/permissions.cfg  #permissions for spooner.

###########################################################################################
# A comma-separated list of tags for your server.
#sets tags "drifting, cars, racing"

sets tags "roleplay,western,bandits"

# A valid locale identifier for your server's primary language.
# For example "en-US", "fr-CA", "nl-NL", "de-DE", "en-GB", "pt-BR"

sets locale "nl-NL" 
# please DO replace root-AQ on the line ABOVE with a real language!

# Set your server's hostname
sv_hostname "Kama's Development"

# Set your server's Project Name 
sets sv_projectName "Kama's Development"

#set an invite link to your discord will show in redm server listing 
sets Discord "http://discord.gg/UMdhNN9hK2"

# Set your server's Project Description
sets sv_projectDesc "Working to make the community better."


# Hide player endpoints in external log output.
sv_endpointprivacy true

load_server_icon servericon.png  #REPLACE the icon.png found in the folder to your logo 96x96

sets banner_detail ""  #1865x108 size add a url here
sets banner_connecting "" #use a smaller size add a url here
                      
#sets activitypubFeed NAMEHERE@mstdn.social #if you want to use a news feed in your redM server listing page open an account at mstdn.social

###########################################################################################
set sv_enforceGameBuild 1436 # gamebuild change this when a newer exists 

set gamename rdr3 # dont touch

set onesync on  #onesync is off or just uncomment f you want it on

# Server player slot limit (must be between 1 and 32, unless using OneSync) with OneSync ON you can add 42 slots
sv_maxclients 10

#sv_master1 ""

# Steam Web API key, if you want to use Steam authentication (https://steamcommunity.com/dev/apikey)
# -> replace "xxxxxx" with the key
# (https://steamcommunity.com/dev/apikey) get it here
set steam_webApiKey "YOUR STEAM WEB API KEY HERE"

# (https://keymaster.fivem.net)
set sv_licenseKey "YOUR CFX LICENSE KEY HERE"


